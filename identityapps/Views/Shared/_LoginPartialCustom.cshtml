@using Microsoft.AspNetCore.Identity;
@inject SignInManager<IdentityUser> SigninManager
@inject UserManager<IdentityUser> UserManager

@if(SigninManager.IsSignedIn(User)){
    <li class="nav-item">
        <a class="nav-link p-2" href="#"> @UserManager.GetUserName(User)</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" method="post" asp-controller="Account" asp-action="LogOff">
            <button type="submit" class="btn btn-link">Logout</button>
        </form>
    </li>
}
else
{
    <ul class="navbar nav">
        <li class="nav-item">
            <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link p-2" asp-controller="Account" asp-action="Login">Login</a>
        </li>
    </ul>
}